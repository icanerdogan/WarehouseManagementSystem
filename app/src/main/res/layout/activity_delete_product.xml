<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/winterhue1"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.DeleteProductActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="@string/product_barcode"
                android:textColorHint="@color/winterhue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/winterhue4"
                app:startIconDrawable="@drawable/ic_baseline_barcode"
                app:startIconTint="@color/winterhue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDeleteProductBarcodeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/winterhue2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:maxLength="18"
                    android:fontFamily="serif" />
            </com.google.android.material.textfield.TextInputLayout>


<!--            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="@string/product_model"
                android:textColorHint="@color/winterhue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/winterhue4"
                app:startIconDrawable="@drawable/ic_baseline_title_24"
                app:startIconTint="@color/winterhue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDeleteProductModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/winterhue2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="0.2">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButtonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="30dp"
                android:backgroundTint="@color/winterhue4"
                android:clickable="true"
                android:tint="@color/white"
                android:tintMode="screen"
                app:srcCompat="@drawable/ic_baseline_delete"
                android:contentDescription="Ürün Ekle"/>
        </LinearLayout>

    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutActvityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greyhue1"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/buttonUrunEkle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/winterhue1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonUrunEkle"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/winterhue1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/urunolustur" />

                <TextView
                    android:id="@+id/textViewUrunEkle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:background="@color/winterhue1"
                    android:gravity="center"
                    android:hint="@string/urun_ekle"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/winterhue1"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/buttonUrunSil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/winterhue1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonUrunSil"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/winterhue1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/urunsil" />

                <TextView
                    android:id="@+id/textViewUrunSil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="@string/urun_sil"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/buttonUrunGirisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/winterhue1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonUrunGirisi"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/winterhue1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/urungirisi" />

                <TextView
                    android:id="@+id/textViewUrunGirisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="@string/urun_girisi"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/winterhue1"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/buttonUrunCikisi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/winterhue1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonUrunCikisi"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/winterhue1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/uruncikisi" />

                <TextView
                    android:id="@+id/textViewUrunCikisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="@string/urun_cikisi"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="50dp">

            <LinearLayout
                android:id="@+id/buttonStokGoruntule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/winterhue1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonStokGoruntule"
                    android:layout_width="125dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:background="@color/winterhue1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stok" />

                <TextView
                    android:id="@+id/textViewStokGoruntule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:hint="@string/stok_goruntule"
                    android:textColorHint="@color/hintTextColor"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</RelativeLayout>

